{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "ami_name": "fuji-test-ami_packer-build {{timestamp}}",
    "type": "amazon-ebs",
    "ssh_pty": true,
    "associate_public_ip_address": true,
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "ami-abb07bcb",
    "instance_type": "t1.micro",
    "ssh_username": "ubuntu"
  }],
  "provisioners": [{
    "type": "file",
    "source": "packer_config/scripts",
    "destination": "/tmp/scripts"
  }, {
    "type": "shell",
    "environment_vars": [
      "INSTANCE_USER=ubuntu",
      "NVM_VERSION=v0.24.0",
      "NODE_VERSION=0.10"
    ],
    "script": "packer_config/scripts/setup"
  }, {
    "type": "file",
    "source": "app",
    "destination": "/tmp/appserver"
  }, {
    "type": "shell",
    "environment_vars": [
      "INSTANCE_USER=ubuntu",
      "NGINX_WORKERS=4",
      "SERVER_NAME=fuji-app.local",
      "NODE_ENV=production",
      "NAME=fuji-app-production"
    ],
    "script": "packer_config/scripts/init"
  }]
}
